<resources>

    <style name="SplashTheme" parent="Theme.SplashScreen">
        <item name="postSplashScreenTheme">@style/AppMaterial</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/app_icon_foreground</item>
    </style>

    <style name="AppMaterial" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- Customize your theme here. -->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorSecondary">@color/colorAccent</item>-->
        <item name="staticColorTransparent">@android:color/transparent</item>
        <item name="staticColorConsonantSounds">@color/consonant_sounds</item>
        <item name="staticColorRControlledVowelsSounds">@color/r_controlled_vowels</item>
        <item name="staticColorVowelSounds">@color/vowel_sounds</item>
        <item name="staticColorWhite">@android:color/white</item>

        <item name="textAppearanceDisplayLarge">@style/AppMaterial.TextAppearance.DisplayLarge</item>
        <item name="textAppearanceDisplayMedium">@style/AppMaterial.TextAppearance.DisplayMedium</item>
        <item name="textAppearanceDisplaySmall">@style/AppMaterial.TextAppearance.DisplaySmall</item>
        <item name="textAppearanceHeadlineLarge">@style/AppMaterial.TextAppearance.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/AppMaterial.TextAppearance.HeadlineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/AppMaterial.TextAppearance.HeadlineSmall</item>
        <item name="textAppearanceTitleLarge">@style/AppMaterial.TextAppearance.TitleLarge</item>
        <item name="textAppearanceTitleMedium">@style/AppMaterial.TextAppearance.TitleMedium</item>
        <item name="textAppearanceTitleSmall">@style/AppMaterial.TextAppearance.TitleSmall</item>
        <item name="textAppearanceBodyLarge">@style/AppMaterial.TextAppearance.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/AppMaterial.TextAppearance.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/AppMaterial.TextAppearance.BodySmall</item>
        <item name="textAppearanceLabelLarge">@style/AppMaterial.TextAppearance.LabelLarge</item>
        <item name="textAppearanceLabelMedium">@style/AppMaterial.TextAppearance.LabelMedium</item>
        <item name="textAppearanceLabelSmall">@style/AppMaterial.TextAppearance.LabelSmall</item>
    </style>
</resources>
