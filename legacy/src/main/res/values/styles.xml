<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorAccent</item>
    </style>

    <style name="TitleRegular">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:fontFamily">@font/font_regular</item>
    </style>

    <style name="Title2Regular">
        <item name="android:textSize">@dimen/title2size</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:fontFamily">@font/font_regular</item>
    </style>

    <style name="BodyRegular">
        <item name="android:textSize">@dimen/bodySize</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:fontFamily">@font/font_regular</item>
    </style>

    <style name="AdText" parent="BodyRegular">
        <item name="android:textSize" tools:ignore="SpUsage">14dp</item>
    </style>

    <style name="AdText.Small" parent="AdText">
        <item name="android:textSize" tools:ignore="SpUsage">12dp</item>
    </style>

    <style name="BottomNavigationActive">
        <item name="android:fontFamily">@font/font_regular</item>
    </style>

    <style name="BottomNavigationInactive">
        <item name="android:fontFamily">@font/font_regular</item>
    </style>

    <style name="SoundInCard" parent="Title2Regular">
        <item name="android:textColor">?attr/colorOnPrimarySurface</item>
    </style>

    <style name="AppTheme.Launcher" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="AppTheme.Video" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Widget.AppTheme.BottomSheet" parent="Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item> <!-- This is important -->
        <item name="android:statusBarColor">@android:color/transparent
        </item> <!-- And then this will be needed -->
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ProgressBar" parent="AppTheme">
        <item name="colorSecondary">@color/colorPrimary</item>
    </style>

    <style name="RatingBarSmall" parent="Widget.AppCompat.RatingBar.Small">
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="ProgressBar.Red" parent="AppTheme.Video">
        <item name="colorSecondary">@color/youtube_color</item>
    </style>

    <style name="SoundItem" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="rippleColor">@color/ripple_accent</item>
    </style>
</resources>
